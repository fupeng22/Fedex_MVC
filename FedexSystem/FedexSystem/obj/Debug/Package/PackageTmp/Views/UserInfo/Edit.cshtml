@model Model.M_Users
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <script src="@Url.Content("~/JS/UserInfo_Update.js")" type="text/javascript"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <table cellpadding="3">
            <tr>
                <td>
                    用户账号:
                </td>
                <td>
                    <input type="hidden" id="txtId" name="txtId" value="@Model.UserID"/>
                    <input type="text" id="txtUserID_Edit" name="txtUserID_Edit" class="easyui-validatebox" required="true"  value="@Model.UserNumber"/>
                </td>
                <td>
                    密码:
                </td>
                <td>
                    <input type="password" id="txtUserPassword_Edit" name="txtUserPassword_Edit" class="easyui-validatebox"
                        required="true"  value=""/>
                </td>
                <td>
                    确认密码:
                </td>
                <td>
                    <input type="password" id="txtReUserPassword_Edit" name="txtReUserPassword_Edit"
                        class="easyui-validatebox" required="true"  value=""/>
                </td>
            </tr>
            <tr>
                <td>
                    姓名:
                </td>
                <td>
                    <input type="text" id="txtUserName_Edit" name="txtUserName_Edit" class="easyui-validatebox"  value="@Model.UserName" />
                </td>
                <td>
                    性别:
                </td>
                <td colspan="3">
                    @*<select id="ddlSex" name="ddlSex" class="easyui-combobox" editable="false" panelheight="auto">
                        <option value="---请选择---">---请选择---</option>
                        <option value="0">男</option>
                        <option value="1">女</option>
                    </select>*@
                    <select id="ddlSex_Edit" name="ddlSex_Edit" editable="false" panelheight="auto" style="width: 200px;">
                    </select>
                    <input  type="hidden" id="hid_ddlSex" name="hid_ddlSex" value="@Model.Sex"/>
                </td>
            </tr>
            <tr style="display:none">
                <td>
                    权限:
                </td>
                <td colspan="5">
                    <select id="ddlAuthority_Edit" name="ddlAuthority_Edit" multiple style="width: 600px;"
                        panelheight="auto">
                        <input  type="hidden" id="hid_ddlAuthority" name="hid_ddlAuthority" value="@Model.RightClass"/>
                </td>
            </tr>
            <tr>
                <td>
                    部门:
                </td>
                <td colspan="5">
                    <select id="ddlDepart_Edit" name="ddlDepart_Edit" style="width: 600px;" panelheight="auto">
                        <input  type="hidden" id="hid_ddlDepart" name="hid_ddlDepart" value="@Model.Department"/>
                </td>
            </tr>
        </table>
    }
</body>
</html>
