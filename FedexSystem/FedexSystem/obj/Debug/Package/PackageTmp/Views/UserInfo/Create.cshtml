<!DOCTYPE html>
<html>
<head>
    <script src="@Url.Content("~/JS/UserInfo_Create.js")" type="text/javascript"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <table cellpadding="3">
            <tr>
                <td>
                    用户账号:
                </td>
                <td>
                    <input type="text" id="txtUserID" name="txtUserID" class="easyui-validatebox" required="true" />
                </td>
                <td>
                    密码:
                </td>
                <td>
                    <input type="password" id="txtUserPassword" name="txtUserPassword" class="easyui-validatebox"
                        required="true"   value=""/>
                </td>
                <td>
                    确认密码:
                </td>
                <td>
                    <input type="password" id="txtReUserPassword" name="txtReUserPassword" class="easyui-validatebox"
                        required="true"   value=""/>
                </td>
            </tr>
            <tr>
                <td>
                    姓名:
                </td>
                <td>
                    <input type="text" id="txtUserName" name="txtUserName" class="easyui-validatebox" />
                </td>
                <td>
                    性别:
                </td>
                <td colspan="3">
                    <select id="ddlSex" name="ddlSex" class="easyui-combobox" editable="false" panelheight="auto">
                        <option value="---请选择---">---请选择---</option>
                        <option value="0">男</option>
                        <option value="1">女</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    权限:
                </td>
                <td colspan="5">
                    <select id="ddlAuthority" name="ddlAuthority" multiple style="width: 600px;" panelheight="auto">
                </td>
            </tr>
            <tr>
                <td>
                    部门:
                </td>
                <td colspan="5">
                    <select id="ddlDepart" name="ddlDepart" style="width: 600px;" panelheight="auto">
                </td>
            </tr>
        </table>
    }
</body>
</html>
